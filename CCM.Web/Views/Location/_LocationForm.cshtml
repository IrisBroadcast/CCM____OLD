@model CCM.Web.Models.Location.LocationViewModel



<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })</div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.ShortName, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.ShortName, new { @class = "form-control", maxlength = "8" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Comment, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">@Html.TextBoxFor(m => m.Comment, new { @class = "form-control" })</div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Net, new { @class = "col-md-2 control-label" })
    <div class="col-md-3">@Html.TextBoxFor(m => m.Net, new { @class = "form-control" })</div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Cidr, new { @class = "col-md-2 control-label" })
    <div class="col-md-1">@Html.TextBoxFor(m => m.Cidr, new { @class = "form-control" })</div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.NetV6, new { @class = "col-md-2 control-label" })
    <div class="col-md-3">@Html.TextBoxFor(m => m.NetV6, new { @class = "form-control" })</div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.CidrV6, new { @class = "col-md-2 control-label" })
    <div class="col-md-1">@Html.TextBoxFor(m => m.CidrV6, new { @class = "form-control" })</div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.CarrierConnectionId, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">@Html.TextBoxFor(m => m.CarrierConnectionId, new { @class = "form-control" })</div>
</div>


<div class="form-group">
    @Html.LabelFor(m => m.ProfileGroup, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.ProfileGroup, new SelectList(Model.ProfileGroups, "Id", "Name"), new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Region, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.Region, new SelectList(Model.Regions, "Id", "Name"), new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.City, new SelectList(Model.Cities, "Id", "Name"), new { @class = "form-control" })
    </div>
</div>

@Html.HiddenFor(m => m.Id)

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink(Resources.Cancel, "Index", "Location", null, new { @class = "btn btn-default" })
        <button type="submit" class="btn btn-primary">@Resources.Save</button>
    </div>
</div>
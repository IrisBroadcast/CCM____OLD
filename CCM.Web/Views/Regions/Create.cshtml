@model CCM.Web.Models.Regions.RegionViewModel

@{
    ViewBag.Title = Resources.New_Region;
}

<h2>@Resources.New_Region</h2>
<hr />

@using (Html.BeginForm("Create", "Regions", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    
    @Html.Partial("_RegionForm", Model)
}

@section scripts
{
    <script>
        $(function () {
            $('#locationfilter').keyup(function() {
                $('#locations-menu li').each(function() {
                    var labelText = $(this).children('label').first().children('span').first().text().substring(0, $('#locationfilter').val().length);
                    var filterText = $('#locationfilter').val();
                    var matches = labelText.toLowerCase() == filterText.toLowerCase();

                    if (matches) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>
}
@model CCM.Core.Entities.Region

@{
    ViewBag.Title = Resources.Delete_Region;
}

<h2>@Resources.Delete_Region</h2>
<hr />
<p>@Resources.Delete_Region_Are_You_Sure</p>
<p>@Model.Name</p>

@using (Html.BeginForm("Delete", "Regions", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.ActionLink(Resources.Cancel, "Index", "Regions", null, new { @class = "btn btn-default" })
        <button type="submit" class="btn btn-danger">@Resources.Delete</button>
    </div>
}
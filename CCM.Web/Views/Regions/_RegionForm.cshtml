@model CCM.Web.Models.Regions.RegionViewModel

<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Locations, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        <div class="dropdown">
            <a class="dropdown-toggle btn-default btn" data-toggle="dropdown" href="#">@Resources.Locations <b class="caret"></b></a>
            <div class="dropdown-menu dropdown-menu-checkboxes">
                <input type="text" id="locationfilter" class="form-control" placeholder="@Resources.Search" />
                <ul class="" role="menu" id="locations-menu">
                    @for (int i = 0; i < Model.Locations.Count; i++)
                    {
                        <li>
                            <label class="checkbox">
                                @Html.CheckBoxFor(m => m.Locations[i].Selected)
                                <span>@Model.Locations[i].Name</span>
                                @Html.HiddenFor(m => m.Locations[i].Name)
                                @Html.HiddenFor(m => m.Locations[i].Id)
                            </label>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@Html.HiddenFor(m => m.Id)

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink(Resources.Cancel, "Index", "Regions", null, new { @class = "btn btn-default" })
        <button type="submit" class="btn btn-primary">@Resources.Save</button>
    </div>
</div>
@model CCM.Web.Models.AccountAdmin.DeleteUserViewModel

@{
    ViewBag.Title = Resources.Delete_Account;
}

<h2>@Resources.Delete_Account</h2>
<hr/>
<p>@Resources.Delete_Account_Are_You_Sure</p>
<p>@Model.UserName</p>

@using (Html.BeginForm("Delete", "AccountAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.UserName)
    <div class="form-group">
        @Html.ActionLink(Resources.Cancel, "Index", "AccountAdmin", null, new { @class = "btn btn-default" })
        <button type="submit" class="btn btn-danger">@Resources.Delete</button>
    </div>
}
@{
    ViewBag.Title = "Ändra loggnivå";
    var logLevel = ViewBag.CurrentLevel;
}

<h2>Ändra loggnivå</h2>

<hr />

<div>Aktuell lognivå är @logLevel</div>
<br/>

@using (Html.BeginForm("LogLevel", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <input type="radio" name="loglevel" value="DEBUG" @(logLevel == "DEBUG" ? "checked" : "")>DEBUG
        <input type="radio" name="loglevel" value="INFO" @(logLevel == "INFO" ? "checked" : "")>INFO
        <input type="radio" name="loglevel" value="WARN" @(logLevel == "WARN" ? "checked" : "")>WARN
        <input type="radio" name="loglevel" value="ERROR" @(logLevel == "ERROR" ? "checked" : "")>ERROR
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn btn-primary">Spara</button>
        </div>
    </div>
}

